                        Next l
                k = k + 1
                Loop
                For l = 1 To 12
                        Worksheets("B").Range("bpar").Offset(k - 1, l) = ""
                        Worksheets("B").Range("bpar").Offset(k - 1, l).Interior.ColorIndex = 0
                Next l
        End If
        i = i + 1
Loop

